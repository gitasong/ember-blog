{{#if updatePostForm}}
  <h4>Update {{post.title}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>

      <div class="form-group">
        <label for="author">Type</label>
        {{input value=author id="author" placeholder=post.author}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=post.image}}
      </div>

      <div class="form-group">
        <label for="teaser">Teaser</label>
        {{input value=teaser id="teaser" placeholder=post.teaser}}
      </div>

      <div class="form-group">
        <label for="fulltext">Full Text</label>
        {{input value=fulltext id="fulltext" placeholder=post.fulltext}}
      </div>

      <button {{action 'update' post}}>Save Changes</button>
    </form>
  </div>
{{else}}
  <button {{action 'updatePostForm'}}>Update</button>
{{/if}}
