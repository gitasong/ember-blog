<h2>{{post.title}}</h2>
<p><cite>{{post.author}}</cite></p>
<img src="{{post.image}}" class="post-detail-image" alt="{{post.title}}" />
<p>{{post.fulltext}}</p>

<button {{action 'delete' post}}>Delete</button>

<h2>Comments</h2>
{{#each post.comments as |comment|}}
  {{comment-tile comment=comment}}  <!-- needs destroyComment="destroyComment" -->
{{/each}}
