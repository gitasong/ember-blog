{{#if addNewPost}}
  <h2>New Post</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>

      <div class="form-group">
        <label for="teaser">Teaser</label>
        {{input value=teaser id="teaser"}}
      </div>

      <div class="form-group">
        <label for="fulltext">Full Text</label>
        {{input value=fulltext id="fulltext"}}
      </div>

      <button {{action 'savePost'}}>Save Post</button>
    </form>
  </div>
{{else}}
  <button {{action 'postFormShow'}}>New Post</button>
{{/if}}
